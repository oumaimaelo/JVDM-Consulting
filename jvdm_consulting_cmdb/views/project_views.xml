<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="project.open_view_task_list_kanban" model="ir.actions.act_window.view">
            <field name="sequence" eval="10"/>
            <field name="view_mode">kanban</field>
            <field name="act_window_id" ref="project.action_view_task"/>
        </record>

        <record id="edit_project" model="ir.ui.view">
            <field name="name">project.project.form</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <newline/>
                    <field name="landscape_id" groups="jvdm_consulting_cmdb.group_cmdb_user,jvdm_consulting_cmdb.group_cmdb_manager"/>
                    <newline/>
                </field>
            </field>
        </record>

        <record id="view_task_tree2_jvdm" model="ir.ui.view">
            <field name="name">project.task.tree.jvdm</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_tree2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='stage_id']" position="after">
                    <field name="kanban_state" string="Status" widget="state_selection" optional="show"/>

                    <field name="priority" widget="priority" class="mr-3"/>
                </xpath>
            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="inherited_view_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form.view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='function']" position="before">
                    <field name="company_id"/>
                </xpath>

            </field>
        </record>

        <record id="view_project_task_status_form" model="ir.ui.view">
            <field name="name">project.task.status.form</field>
            <field name="model">project.task.status</field>
            <field name="arch" type="xml">
                <form string="">
                    <group>
                        <field name="stage_id"/>
                    </group>
                    <footer>
                        <button string="Confirm" class="btn-primary" name="confirm" type="object"/>
                        <button special="cancel" string="Cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="act_change_project_task_status"
                    name="Modify Status"
                    res_model="project.task.status"
                    binding_model="project.task"
                    view_mode="form" target="new"
                    view_id="view_project_task_status_form"/>

    </data>
</odoo>